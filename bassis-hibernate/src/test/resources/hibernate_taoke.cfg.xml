<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
    <!-- 连接配置 -->
		<property name="hibernate.connection.url">jdbc:mysql://www.modaolc.com:3306/taoke?useUnicode=true&amp;characterEncoding=utf-8&amp;rewriteBatchedStatements=true</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver </property>
		<!--c3p0 连接池配置 -->
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.min_size">1</property> <!-- 在连接池中可用数据库连接的最小数目 -->
		<property name="hibernate.c3p0.max_size">100</property> <!-- 在连接池中所有数据库连接的最大数目 -->
		<property name="hibernate.c3p0.timeout">3000</property> <!-- 设定数据库连接的超时时间 -->
		<property name="hibernate.c3p0.max_statements">100</property><!-- 设置连接池中Statement对象的最大数量 -->
		<property name="hibernate.c3p0.idle_test_period">120</property><!-- 设置检查连接池中空闲连接的间隔时间，单位为秒 -->	
		<!-- hibernate配置 -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<!-- 线上不需要打印sql 记得改为false -->
		<property name="hibernate.show_sql">true</property>
	</session-factory>
</hibernate-configuration>
