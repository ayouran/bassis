		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>container</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<!--配置请求的编码 -->
	<filter>
		<filter-name>CharacterEncodingFilte</filter-name>
		<filter-class>bassis.bassis_web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilte</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
